rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isDriver(userId) {
      return isSignedIn() &&
        request.auth.uid == userId &&
        exists(/databases/$(database)/documents/drivers/$(userId));
    }

    match /users/{userId} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;
    }

    match /drivers/{driverId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && request.auth.uid == driverId;
    }

    match /rideRequests/{rideId} {
      allow read: if isSignedIn();

      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;

      allow update: if isSignedIn() &&
        request.resource.data.userId == resource.data.userId &&
        (
          resource.data.userId == request.auth.uid ||
          resource.data.driverId == request.auth.uid ||
          (
            isDriver(request.auth.uid) &&
            (!resource.data.driverId || resource.data.driverId == "") &&
            request.resource.data.driverId == request.auth.uid
          )
        );

      allow delete: if false;
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}