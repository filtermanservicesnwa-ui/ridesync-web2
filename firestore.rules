rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isUserOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isDriver() {
      return isSignedIn() &&
        exists(/databases/$(database)/documents/drivers/$(request.auth.uid));
    }

    function isSafeUserProfileCreate(data) {
      return (!('membershipType' in data) || data.membershipType == "basic") &&
        (!('membershipStatus' in data) || data.membershipStatus == "none");
    }

    function isSafeUserProfileUpdate(before, after) {
      return before.membershipType == after.membershipType &&
        before.membershipStatus == after.membershipStatus;
    }

    match /users/{userId} {
      allow read: if isUserOwner(userId);
      allow create: if isUserOwner(userId) && isSafeUserProfileCreate(request.resource.data);
      allow update: if isUserOwner(userId) && isSafeUserProfileUpdate(resource.data, request.resource.data);
    }

    match /drivers/{driverId} {
      allow read: if isSignedIn();
      allow write: if isUserOwner(driverId);
    }

    match /rideRequests/{rideId} {
      allow read: if isSignedIn();
      allow write: if isDriver();
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}